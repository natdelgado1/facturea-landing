---
import "../../styles/global.css";
import "../../styles/progressive-reveal.css";
import { termsContent } from "../../../data/terms.js";
import NavBar from "../../components/Sections/navBar.astro";
import ScrollToTop from "../../components/ScrollToTop.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO Meta Tags -->
    <title>Terms and Conditions - Facturea.io</title>
    <meta
      name="description"
      content="Terms and conditions of use for Facturea.io - The first fintech for electronic invoice advances in Paraguay."
    />
    <meta
      name="keywords"
      content="terms and conditions, facturea, factoring Paraguay, privacy policies"
    />

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="Terms and Conditions - Facturea.io"
    />
    <meta
      property="og:description"
      content="Terms and conditions of use for Facturea.io - The first fintech for electronic invoice advances in Paraguay."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://facturea.io/en/terms" />
    
    <!-- Preload Visby CF Fonts para mejor performance -->
    <link 
      rel="preload" 
      href="/src/assets/fonts/visbycf-regular.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin
    />
    <link 
      rel="preload" 
      href="/src/assets/fonts/visbycf-bold.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin
    />
  </head>

  <body class="antialiased font-visby bg-gray-50">
    <!-- Header -->
    <header
      class="fixed top-0 right-0 left-0 z-50 border-b backdrop-blur-sm bg-white/95 border-lightGray"
    >
      <NavBar />
    </header>

    <!-- Hero Section -->
    <section class="pt-24 pb-12 bg-gradient-to-b from-white to-gray-50">
      <div class="container px-4 mx-auto sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="mb-6 text-4xl font-bold text-gray-900 sm:text-5xl lg:text-6xl">
            Terms and <span class="text-primary">Conditions</span>
          </h1>
          <p class="text-lg text-gray-600 sm:text-xl">
            Last updated: {new Date().toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </p>
        </div>
      </div>
    </section>

    <!-- Contenido de Términos -->
    <section class="py-12 bg-white">
      <div class="container px-4 mx-auto sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <!-- Navegación de secciones -->
          <div class="sticky top-24 z-40 mb-8 p-4 bg-white border border-gray-200 rounded-lg shadow-sm">
            <h3 class="mb-4 text-lg font-semibold text-gray-900">Index</h3>
            <nav class="flex flex-wrap gap-2">
              {termsContent.sections.map((section, index) => (
                <a
                  href={`#${section.id}`}
                  class="px-3 py-1 text-sm text-primary bg-primary/10 rounded-md hover:bg-primary/20 transition-colors"
                >
                  {index + 1}. {section.title.split('.')[1]?.trim() || section.title}
                </a>
              ))}
            </nav>
          </div>

          <!-- Contenido de las secciones -->
          <div class="space-y-12">
            {termsContent.sections.map((section, sectionIndex) => (
              <div id={section.id} class="scroll-mt-32">
                <h2 class="mb-6 text-2xl font-bold text-gray-900 sm:text-3xl">
                  {section.title}
                </h2>
                <div class="prose prose-lg max-w-none">
                  {section.content.map((paragraph, paragraphIndex) => (
                    <p class="mb-4 text-gray-700 leading-relaxed">
                      {paragraph}
                    </p>
                  ))}
                </div>
              </div>
            ))}
          </div>

          <!-- Botón de regreso -->
          <div class="mt-12 text-center">
            <a
              href="/en"
              class="inline-flex items-center px-6 py-3 text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Home
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container px-4 mx-auto sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-gray-400">
            © {new Date().getFullYear()} Facturea.io. All rights reserved.
          </p>
          <p class="mt-2 text-sm text-gray-500">
            For questions about these terms, contact us at{' '}
            <a href="mailto:info@facturea.io" class="text-primary hover:underline">
              info@facturea.io
            </a>
          </p>
        </div>
      </div>
    </footer>

    <!-- Scroll to Top -->
    <ScrollToTop />

    <style>
      /* Estilos específicos para la página de términos */
      .prose p {
        margin-bottom: 1rem;
        line-height: 1.7;
      }
      
      .prose h2 {
        color: #1f2937;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      
      /* Smooth scroll para navegación */
      html {
        scroll-behavior: smooth;
      }
      
      /* Estilos para enlaces internos */
      a[href^="#"] {
        scroll-margin-top: 8rem;
      }
    </style>

    <script>
      // Smooth scroll para navegación interna
      document.addEventListener('DOMContentLoaded', function() {
        const links = document.querySelectorAll('a[href^="#"]');
        
        links.forEach(link => {
          link.addEventListener('click', (e: Event) => {
            e.preventDefault();
            
            const targetId = (e.target as HTMLAnchorElement).getAttribute('href');
            const targetElement = document.querySelector(targetId || '');
            
            if (targetElement) {
              targetElement.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html> 