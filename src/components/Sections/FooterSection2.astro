---
import logoColor from "../../assets/logo_primary_color.svg";
import { footer } from "../../../data/footer.js";

---

<!-- Footer - Estilo moderno v2 -->
<footer
  class="overflow-hidden relative py-20 bg-white border-t border-gray-200"
>
  <!-- Elementos decorativos flotantes -->
  <div class="overflow-hidden absolute inset-0 pointer-events-none">
    <div
      class="absolute top-12 left-20 w-32 h-32 bg-gradient-to-br rounded-full blur-3xl from-primary/20 to-accent/10"
    >
    </div>
    <div
      class="absolute right-16 top-32 w-28 h-28 bg-gradient-to-br rounded-full blur-2xl from-accent/25 to-secondary/15"
    >
    </div>
    <div
      class="absolute bottom-20 left-1/4 w-36 h-36 bg-gradient-to-br rounded-full blur-3xl from-secondary/20 to-primary/10"
    >
    </div>
    <div
      class="absolute bottom-8 right-1/3 w-24 h-24 bg-gradient-to-br rounded-full blur-xl from-primary/25 to-accent/15"
    >
    </div>
  </div>

  <div class="container relative z-10 px-6 mx-auto">
    <div class="mx-auto max-w-6xl">
      <!-- Sección principal del footer -->
      <div class="grid gap-12 mb-16 lg:grid-cols-4 md:grid-cols-2">
        <!-- Logo y descripción -->
        <div class="lg:col-span-2">
          <div class="mb-8">
            <div class="flex items-center mb-4">
              <img
                src={logoColor.src}
                alt={footer.logoAlt}
                class="w-auto h-6"
                loading="lazy"
              />
            </div>
            <p class="max-w-md text-lg leading-relaxed text-gray-600">
             {footer.description}
            </p>
          </div>

          <!-- Redes sociales -->
          <div class="flex space-x-4">
            {
              footer.socialMedia.map((item) => (
                <a
                  href={item.href}
                  aria-label={`Síguenos en ${item.label}`}
                  class="flex justify-center items-center w-12 h-12 bg-gradient-to-br rounded-xl transition-all duration-300 from-primary/10 to-accent/10 text-primary hover:text-white hover:bg-primary group"
                  set:html={item.icon.replace(/<svg/g, '<svg class="w-6 h-6"')}
                ></a>
              ))
            }
          </div>
        </div>

        <!-- Enlaces rápidos -->
        <div>
          <h4 class="mb-6 text-xl font-bold text-gray-900">Enlaces rápidos</h4>
          <ul class="space-y-3">
            {
              footer.quickLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="flex items-center text-gray-600 transition-colors duration-300 hover:text-primary group"
                  >
                    <svg
                      class="mr-2 w-4 h-4 transition-opacity duration-300 text-primary group-hover:opacity-100"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Información de contacto -->
        <div>
          <h4 class="mb-6 text-xl font-bold text-gray-900">{footer.contact.label}</h4>
          <div class="space-y-4">
            {
              footer.contact.items.map((item) => (
                <div class="flex items-start">
                  <div
                    class="flex justify-center items-center mt-1 mr-4 w-10 h-10 rounded-lg bg-primary/10"
                  >
                    <Fragment set:html={item.icon} />
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">{item.label}</p>
                    <a href={item.href} class="text-gray-600 transition-colors hover:text-primary">{item.value}</a>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Línea divisoria con gradiente -->
      <div
        class="mb-8 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"
      >
      </div>

      <!-- Footer inferior -->
      <div
        class="flex flex-col justify-between items-center space-y-4 md:flex-row md:space-y-0"
      >
        <div class="text-center md:text-left">
          <p class="text-gray-600">
            © 2025 Facturea.io. Todos los derechos reservados.
          </p>
        </div>

        <div class="flex space-x-6">
          <a
            href="/terminos"
            class="text-gray-600 transition-colors duration-300 hover:text-primary"
          >
            Términos y Condiciones
          </a>
          <a
            href="/privacidad"
            class="text-gray-600 transition-colors duration-300 hover:text-primary"
          >
            Política de Privacidad
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
