---
// Componente de fondo animado elegante para Facturea
---

<div class="animated-background">
  <!-- Gradiente principal animado -->
  <div class="gradient-layer"></div>
  
  <!-- Orbes flotantes sutiles -->
  <div class="floating-orbs">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>
    <div class="orb orb-4"></div>
    <div class="orb orb-5"></div>
  </div>
  
  <!-- Capa de textura sutil -->
  <div class="texture-layer"></div>
</div>

<style>
  .animated-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
  }

  .gradient-layer {
    position: absolute;
    top: -10%;
    left: -10%;
    width: 120%;
    height: 120%;
    background: linear-gradient(
      135deg,
      rgba(99, 86, 229, 0.08) 0%,
      rgba(58, 42, 222, 0.12) 25%,
      rgba(140, 130, 236, 0.10) 50%,
      rgba(99, 86, 229, 0.15) 75%,
      rgba(255, 255, 255, 0.05) 100%
    );
    animation: gradientFloat 20s ease-in-out infinite;
  }

  .floating-orbs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(50px);
    opacity: 0.3;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(99, 86, 229, 0.6) 0%, transparent 70%);
    top: 10%;
    left: 10%;
    animation: floatSlow 25s ease-in-out infinite;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(58, 42, 222, 0.5) 0%, transparent 70%);
    top: 60%;
    right: 15%;
    animation: floatSlow 30s ease-in-out infinite reverse;
  }

  .orb-3 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(140, 130, 236, 0.55) 0%, transparent 70%);
    top: 40%;
    left: 60%;
    animation: floatMedium 20s ease-in-out infinite;
  }

  .orb-4 {
    width: 150px;
    height: 150px;
    background: radial-gradient(circle, rgba(99, 86, 229, 0.45) 0%, transparent 70%);
    top: 80%;
    left: 30%;
    animation: floatMedium 35s ease-in-out infinite reverse;
  }

  .orb-5 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(58, 42, 222, 0.5) 0%, transparent 70%);
    top: 20%;
    right: 40%;
    animation: floatSlow 40s ease-in-out infinite;
  }

  .texture-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 30%, rgba(99, 86, 229, 0.06) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(140, 130, 236, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(58, 42, 222, 0.04) 0%, transparent 50%);
    animation: textureShift 45s ease-in-out infinite;
  }

  /* Animaciones sutiles y elegantes */
  @keyframes gradientFloat {
    0%, 100% { 
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% { 
      transform: translate(-3%, -2%) rotate(2deg) scale(1.05);
    }
    50% { 
      transform: translate(2%, -3%) rotate(-1deg) scale(0.95);
    }
    75% { 
      transform: translate(-2%, 2%) rotate(1deg) scale(1.03);
    }
  }

  @keyframes floatSlow {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    33% { 
      transform: translate(30px, -25px) scale(1.15);
      opacity: 0.4;
    }
    66% { 
      transform: translate(-25px, 20px) scale(0.85);
      opacity: 0.25;
    }
  }

  @keyframes floatMedium {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.35;
    }
    50% { 
      transform: translate(25px, -30px) scale(1.1);
      opacity: 0.45;
    }
  }

  @keyframes textureShift {
    0%, 100% { 
      opacity: 0.5;
      transform: scale(1);
    }
    50% { 
      opacity: 0.3;
      transform: scale(1.02);
    }
  }

  /* Responsividad */
  @media (max-width: 768px) {
    .orb {
      filter: blur(40px);
    }
    
    .orb-1 { width: 250px; height: 250px; }
    .orb-2 { width: 200px; height: 200px; }
    .orb-3 { width: 150px; height: 150px; }
    .orb-4 { width: 100px; height: 100px; }
    .orb-5 { width: 180px; height: 180px; }
  }

  /* Modo de movimiento reducido para accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .gradient-layer,
    .orb,
    .texture-layer {
      animation: none;
    }
  }
</style>

 