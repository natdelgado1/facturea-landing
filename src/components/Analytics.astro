// Componente de Analytics para tracking y m茅tricas
// Incluye Google Analytics, Google Tag Manager y m茅tricas personalizadas

const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
const gtmId = import.meta.env.PUBLIC_GTM_ID;
const hotjarId = import.meta.env.PUBLIC_HOTJAR_ID;
const facebookPixelId = import.meta.env.PUBLIC_FACEBOOK_PIXEL_ID;
---

<!-- Google Analytics 4 -->
{gaId && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script is:inline define:vars={{ gaId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', gaId, {
        page_title: document.title,
        page_location: window.location.href,
        send_page_view: true
      });
    </script>
  </>
)}

<!-- Google Tag Manager -->
{gtmId && (
  <>
    <script is:inline define:vars={{ gtmId }}>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer',gtmId);
    </script>
  </>
)}

